{
  "name": "ellas-candy-factory",
  "version": "2.0.0",
  "description": "Ella's Candy Factory 3D - A Minecraft-inspired candy factory simulator",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "test": "jest",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:all": "pnpm run test:unit:coverage && pnpm run test:e2e",
    "test:ci": "jest --coverage --ci --watchAll=false && playwright test",
    "coverage": "jest --coverage",
    "coverage:open": "jest --coverage && start coverage/lcov-report/index.html",
    "test:runner": "node scripts/test-runner.cjs",
    "lint:test": "echo 'No linting configured for tests yet'",
    "install:playwright": "playwright install"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.37.0",
    "babel-jest": "^30.0.5",
    "c8": "^10.1.3",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "vite": "^5.0.0"
  }
}